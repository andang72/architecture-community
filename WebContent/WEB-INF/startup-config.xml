<?xml version="1.0" encoding="UTF-8"?>
<startup-config>
	<setup>
		<complete>false</complete>
	</setup>
	<!--LICENSE SETTING -->
	<license />
	<!--SECURITY SETTING -->
	<security>
		<encrypt>
			<algorithm>Blowfish</algorithm>
			<key>
				<current />
			</key>
			<property>
				<name>username</name>
				<name>password</name>
			</property>
		</encrypt>
		<authentication>
			<authority>ROLE_USER	</authority>
			<encoding>
				<algorithm>SHA-256</algorithm>
			</encoding>
		</authentication>
	</security>
	<!--SERVICES SETTING -->
	<services>
		<config>
			<persistence>
				<jdbc>
					<enabled>true</enabled>
				</jdbc>
			</persistence>
		</config>
		<sqlquery>
			<resource>
				<location>sql</location>
			</resource>
		</sqlquery>
	</services>
	<!--DATABASE SETTING -->
	<database>
		<default>
			<!-- 1. jndi datasource -->
			<!-- <jndiDataSourceProvider> <jndiName></jndiName> </jndiDataSourceProvider> -->
			<!-- 2. connection pool datasource using dbcp -->
			<pooledDataSourceProvider>
				<driverClassName>oracle.jdbc.OracleDriver</driverClassName>
				<url>jdbc:oracle:thin:@//222.122.47.196:1521/PODODB</url>
				<username>U_HELPDESK</username>
				<username></username>
				<password></password>
				<connectionProperties>
					<initialSize>1</initialSize>
					<maxActive>8</maxActive>
					<maxIdle>8</maxIdle>
					<maxWait>-1</maxWait>
					<minIdle>0</minIdle>
					<testOnBorrow>false</testOnBorrow>
					<testOnReturn>false</testOnReturn>
					<testWhileIdle>false</testWhileIdle>
					<validationQuery>select 1 from dual</validationQuery>
				</connectionProperties>
			</pooledDataSourceProvider>
		</default>
	</database>
</startup-config>
